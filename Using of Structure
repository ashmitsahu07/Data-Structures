#include<stdio.h>
struct Student{
    int roll;
    char name[20];
    float marks;
};
int main(){
    struct Student s;
    struct Student *ptr;
    
    ptr=&s;
    
    printf("Enter Roll No:");
    scanf("%d",&ptr->roll);
    
    printf("Enter Your Name:");
    scanf("%s",&ptr->name);
    
    printf("Enter The Marks:\n");
    scanf("%f",&ptr->marks);
    
    printf("Roll No:%d\n",ptr->roll);
    printf("Name:%s\n",ptr->name);
    printf("Marks:%f\n",ptr->marks);
    
}
